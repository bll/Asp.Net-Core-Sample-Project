<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse">
        <header class="container">
            <div class="navbar-header">
                <div class="navbar-brand"><i class="fa fa-home"></i> Welcome</div>
                <button class="navbar-toggle" data-toggle="collapse" data-target="#menu">&#9776;</button>
            </div>
                <div id="menu" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        @*<li><a href="/">Home</a></li>
                            <li><a href="/App/About">About Us</a></li>
                            <li><a href="/App/Contact">Contact</a></li>*@

                        @*tag helpers*@
                        <li><a asp-controller="App" asp-action="Index">Home</a></li>
                        <li><a asp-controller="App" asp-action="About">About Us</a></li>
                        <li><a asp-controller="App" asp-action="Contact">Contact</a></li>


                    </ul>
                </div>
            
        </header>
    </div>
    <section class="container">
        <div>
            @RenderBody()
        </div>
    </section>

    <footer class="container">
        <div class="text-center">2017 .Net Core MVC Test Project</div>
    </footer>
    <script src="~/lib/jQuery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    @RenderSection("scripts", false)
</body>
</html>
